{
    "name": "todomvc-playwright-tests",
    "version": "1.0.0",
    "description": "Automated UI tests for TodoMVC using Playwright and Typescript",
    "author": "M. Ivanova",
    "scripts": {
        "test": "npx playwright test --project=chromium",
        "test:allbrowsers": "npx playwright test",
        "test:ui": "playwright test --ui",
        "test:headed": "npx playwright test --headed",
        "report": "playwright show-report"
    },
    "keywords": [
        "playwright",
        "testing",
        "e2e",
        "todomvc"
    ],
    "devDependencies": {
        "@playwright/test": "^1.51.1",
        "prettier": "^3.5.3",
        "typescript": "latest"
    }
}
